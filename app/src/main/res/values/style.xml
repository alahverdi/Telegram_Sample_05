<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="editText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="widgetListViewsItems" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Details Activity table tv -->
    <style name="table_details_textViews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:gravity">start</item>
        <item name="android:padding">16dp</item>
    </style>


    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">#ffff</item>
    </style>

    <style name="MySearchThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/icon_gray</item>
    </style>

    <!-- toolbar textViews : -->
    <style name="toolbar_textView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- material button : -->
    <style name="btn_material" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <!-- Details layout button : -->
    <style name="btn_details" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- view line separator : -->
    <style name="view_separator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginStart">180dp</item>
        <item name="android:layout_marginEnd">180dp</item>
    </style>

    <!-- textInput EditText material : -->
    <style name="material_editText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="maxLines">1</item>
    </style>

    <style name="Theme.TelegramMFTApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TelegramMFTApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
    </style>

    <!--drawer toggle color:-->
    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black_telegram</item>
    </style>

    <!-- navigation drawer TextView -->
    <style name="navigation_drawer_TextViewStyle" parent="android:Widget.TextView">
        <!--<item name="android:fontFamily">@font/digikala_font</item>-->
    </style>

    <!-- bottom sheet -->
    <style name="bottom_sheet">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:gravity">start</item>
    </style>

    <!--bottomSheetDialogTheme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>
</resources>